<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="news_category" resource="default" engine="innodb" comment="News Category Table">
        <column xsi:type="int" name="category_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Category ID"/>
        <column xsi:type="text" name="title" nullable="false" comment="title" />
        <column xsi:type="text" name="category_url" nullable="false" comment="Category URL" />
        <column xsi:type="timestamp" name="created_at" nullable="false" comment="Created At" />
        <column xsi:type="timestamp" name="updated_at" nullable="false" comment="Updated At" />
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false" default="0" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_id"/>
        </constraint>
    </table>

    <table name="news_list" resource="default" engine="innodb" comment="News List Table">
        <column xsi:type="int" name="news_id" padding="6" unsigned="true" nullable="false" identity="true" comment="News ID"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category ID"/>
        <column xsi:type="text" name="title" nullable="false" comment="News Title" />
        <column xsi:type="text" name="url_identifier" nullable="false" comment="URL Identifier" />
        <column xsi:type="text" name="description" nullable="false" comment="News Description" />
        <column xsi:type="text" name="image" nullable="false" comment="News Image" />
        <column xsi:type="datetime" name="publish_date" nullable="false" comment="Publish Date" />
        <column xsi:type="text" name="store_view" nullable="false" comment="News Store View" />
        <column xsi:type="timestamp" name="created_at" nullable="false" comment="Created At" />
        <column xsi:type="smallint" name="status" unsigned="true" nullable="false" identity="false" default="0" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="news_id"/>
        </constraint>
    </table>

    <table name="category_news_junction" resource="default" engine="innodb" comment="Category News Junction">
        <column xsi:type="int" name="category_news_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Category NEWS ID"/>
        <column xsi:type="int" name="category_id" unsigned="true" nullable="false" comment="Category ID"/>
        <column xsi:type="int" name="news_id" unsigned="true" nullable="false" comment="News ID"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" comment="Created At" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_news_id"/>
        </constraint>
    </table>

    <table name="news_configuration" resource="default" engine="innodb" comment="News Configuration Table">
        <column xsi:type="int" name="news_config" padding="6" unsigned="true" nullable="false" identity="true" comment="Category ID"/>
        <column xsi:type="int" name="no_of_news" unsigned="true" nullable="false" comment="Number of News"/>
        <column xsi:type="smallint" name="auto_rotate" unsigned="true" nullable="false" identity="false" default="0" />
        <column xsi:type="text" name="top_menu_text" nullable="false" comment="Menu Title" />
        <column xsi:type="smallint" name="display_top_menu" unsigned="true" nullable="false" identity="false" default="0" comment="Top menu visibility" />
        <column xsi:type="timestamp" name="created_at" nullable="false" comment="Created At" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="news_config"/>
        </constraint>
    </table>

</schema>